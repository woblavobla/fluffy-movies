<div id="clearance" class="row">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h2><%= t(".title") %></h2>
    </div>
    <div class="panel-body">
      <p><%= t(".description") %></p>

      <div class="form">
        <%= form_for :password, :html => {:role => 'form', :class => 'form-horizontal'}, url: passwords_path do |form| %>
            <div class="form-group">
              <%= form.label :email, :class => 'col-lg-2 control-label' %>
              <div class="col-lg-10">
                <%= form.text_field :email, type: 'email', :class => 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-2">
                <%= form.submit t('submit_button'), :class => 'btn btn-success' %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
