<%# navigation styled for Bootstrap 3.0 %>
<div class="navbar">
  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/home"><%= t('layouts.application.app_name') %></a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <%= render 'layouts/navigation_links' %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if signed_in? %>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= current_user.email %>
                  <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to t('.profile_info'), user_path(current_user) %></li>
                  <li><%= link_to t('.edit_profile_info'), edit_user_path(current_user) %></li>
                  <% if current_user.admin -%>
                      <li><%= link_to t('.movie_request_updates'), movie_update_requests_path %></li>
                  <% end %>
                </ul>
              </li>
              <li><%= link_to t('layouts.application.sign_out'), sign_out_path, method: :delete %></li>
          <% else %>
              <li><%= link_to t('layouts.application.sign_in'), sign_in_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>